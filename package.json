{
    "name": "ments-rest-api-s25",
    "version": "1.0.0",
    "description": "MongoDB-ExpressJS-NodeJS TS REST API",
    "main": "index.js",
    "scripts": {
        "testdb": "cross-env NODE_ENV=test npx ts-node ./src/index.ts",
        "seed": "cross-env NODE_ENV=development npx ts-node ./src/util/dataSeeder.ts",
        "build": "rm -rf dist/ && tsc",
        "test": "npx playwright test --reporter=list",
        "report": "npx playwright test --reporter=html && npx playwright show-report",
        "lint": "npx eslint"
    },
    "nodemonConfig": {
        "verbose": false,
        "watch": [
            "src"
        ],
        "ext": "js,ts",
        "exec": "npx ts-node ./src/index.ts",
        "ignore": [
            "node_modules"
        ]
    },
    "keywords": [
        "mongodb",
        "mongoose",
        "node",
        "express"
    ],
    "author": "smsj",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv-flow": "^4.1.0",
        "express": "^5.0.1",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.12.0",
        "mongoose": "^8.9.5",
        "node-cron": "^3.0.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@faker-js/faker": "^9.6.0",
        "@playwright/test": "^1.44.1",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/node": "^22.10.6",
        "@types/node-cron": "^3.0.11",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.21.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.26.0"
    }
}
