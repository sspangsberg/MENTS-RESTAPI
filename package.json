{
  "name": "men-restapi-s24",
  "version": "1.0.0",
  "description": "MongoDB-ExpressJS-NodeJS REST API",
  "main": "server.js",
  "scripts": {
    "localdb": "cross-env NODE_ENV=local npx nodemon",
    "remotedb": "cross-env NODE_ENV=remote npx nodemon",
    "build": "rm -rf dist/ && tsc",
    "doc": "npx ts-node src/util/SwaggerDoc.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src"
    ],
    "ext": "js,ts",
    "exec": "npx ts-node ./src/server.ts",
    "ignore": [
      "node_modules"
    ]
  },
  "keywords": [
    "mongodb",
    "mongoose",
    "node",
    "express"
  ],
  "author": "smsj",
  "license": "ISC",
  "dependencies": {
    "@types/yamljs": "^0.2.34",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.0.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/swagger-ui-express": "^4.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
